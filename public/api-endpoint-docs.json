
{
  "documentation": "Dokumentasi ini menjelaskan struktur data yang diharapkan untuk berbagai endpoint/formulir dalam aplikasi KUA Banjarmasin Utara. Setiap objek mewakili data yang akan dikirim oleh frontend.",
  "endpoints": {
    "login": {
      "description": "Endpoint untuk otentikasi pengguna. Menerima email dan password.",
      "method": "POST",
      "url": "/api/auth/login",
      "body_schema": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "Alamat email pengguna yang terdaftar.",
          "example": "user@example.com"
        },
        "password": {
          "type": "string",
          "description": "Password pengguna (minimal 6 karakter).",
          "example": "password123"
        }
      }
    },
    "register": {
      "description": "Endpoint untuk pendaftaran pengguna baru. Menerima nama lengkap, email, dan password.",
      "method": "POST",
      "url": "/api/auth/register",
      "body_schema": {
        "fullName": {
          "type": "string",
          "description": "Nama lengkap pengguna.",
          "example": "Budi Santoso"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Alamat email untuk akun baru.",
          "example": "budi.santoso@example.com"
        },
        "password": {
          "type": "string",
          "description": "Password untuk akun baru (minimal 6 karakter).",
          "example": "passwordBaru321"
        }
      }
    },
    "contact": {
      "description": "Endpoint untuk formulir kontak umum. Pengguna dapat mengirim pertanyaan atau masukan.",
      "method": "POST",
      "url": "/api/contact",
      "body_schema": {
        "name": {
          "type": "string",
          "description": "Nama lengkap pengirim.",
          "example": "Citra Lestari"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Alamat email pengirim untuk balasan.",
          "example": "citra.lestari@example.com"
        },
        "subject": {
          "type": "string",
          "optional": true,
          "description": "Subjek atau judul pesan (opsional).",
          "example": "Pertanyaan mengenai Prosedur Nikah"
        },
        "message": {
          "type": "string",
          "description": "Isi pesan atau pertanyaan dari pengguna.",
          "example": "Selamat siang, saya ingin bertanya tentang dokumen apa saja yang diperlukan untuk mendaftar nikah..."
        }
      }
    },
    "marriageRegistration": {
      "description": "Endpoint utama untuk pendaftaran nikah. Berisi semua data dari formulir multi-langkah.",
      "method": "POST",
      "url": "/api/marriage-registrations",
      "body_schema": {
        "jadwal_dan_lokasi": {
          "weddingLocation": { "type": "string", "example": "Di KUA" },
          "weddingDate": { "type": "string", "format": "YYYY-MM-DD", "example": "2024-12-25" },
          "weddingTime": { "type": "string", "example": "09:00" },
          "dispensationNumber": { "type": "string", "optional": true, "example": "DISP/X/123/2024" }
        },
        "calon_suami": {
          "groomFullName": { "type": "string", "example": "Andi Pratama" },
          "groomNik": { "type": "string", "length": 16, "example": "6371010101900001" },
          "groomCitizenship": { "type": "string", "enum": ["WNI", "WNA"], "example": "WNI" },
          "groomPassportNumber": { "type": "string", "optional": true },
          "groomPlaceOfBirth": { "type": "string", "example": "Banjarmasin" },
          "groomDateOfBirth": { "type": "string", "format": "YYYY-MM-DD", "example": "1995-05-10" },
          "groomStatus": { "type": "string", "example": "Belum Kawin" },
          "groomReligion": { "type": "string", "example": "Islam" },
          "groomEducation": { "type": "string", "example": "Diploma IV/S1" },
          "groomOccupation": { "type": "string", "example": "Karyawan Swasta" },
          "groomOccupationDescription": { "type": "string", "optional": true },
          "groomPhoneNumber": { "type": "string", "example": "081234567890" },
          "groomEmail": { "type": "string", "format": "email", "example": "andi.pratama@example.com" },
          "groomAddress": { "type": "string", "example": "Jl. Merdeka No. 10, Banjarmasin" }
        },
        "orang_tua_suami": {
          "groomFatherName": { "type": "string", "example": "Bambang Wijoyo" },
          "groomFatherNik": { "type": "string", "length": 16, "example": "6371010202700002" },
          "groomFatherReligion": { "type": "string", "example": "Islam" },
          "groomFatherOccupation": { "type": "string", "example": "Pegawai Negeri Sipil" },
